<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>

<VBox fx:id="menu" xmlns:fx="http://javafx.com/fxml" fx:controller="org.raflab.studsluzbadesktopclient.controllers.MenuBarController">
   
        <MenuBar fx:id="menuBar">
            <Menu text="Pretraži">
                <items>
                    <MenuItem text="Studenti" onAction="#openSearchStudent"/>                
                    <MenuItem text="Nastavnici" onAction="#openSearchNastavnik"/>               
                    <MenuItem text="Predmeti"/>                
                    <MenuItem text="Ispitni rokovi"/>
                </items>                           
            </Menu>
            <Menu text="Novi">
                <items>
                    <MenuItem text="Student" onAction="#openNewStudent"/>               
                    <MenuItem text="Nastavnik"/>                
                    <MenuItem text="Predmet"/>
                </items>                          
            </Menu>
            <Menu text="Administracija">
                <items>
                    <MenuItem text="Šifarnici"/>               
                    <MenuItem text="Školska godina"/>               
                    <MenuItem text="Korisnici"/>
                </items>                          
            </Menu>
        </MenuBar>
    
</VBox>

