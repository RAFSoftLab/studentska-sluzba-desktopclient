<?xml version="1.0" encoding="UTF-8"?>



<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.*?>



<TabPane fx:id="mainPane" prefHeight="400" prefWidth="800" xmlns:fx="http://javafx.com/fxml" fx:controller="org.raflab.studsluzbadesktopclient.controllers.StudentPodaciController">
         <Tab fx:id="tab1" text="Osnovni podaci">
         <GridPane alignment="center" hgap="10" vgap="10">
	
		<Label text="Ime" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
		<TextField fx:id="imeTf"  GridPane.columnIndex="1" GridPane.rowIndex="0"/>
		
		<Label text="Prezime" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
		<TextField fx:id="prezimeTf"  GridPane.columnIndex="1" GridPane.rowIndex="1"/>
		
		<Label text="Srednje ime" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
		<TextField fx:id="srednjeImeTf"  GridPane.columnIndex="1" GridPane.rowIndex="2"/>
		
		<Label text="JMBG" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
		<TextField fx:id="jmbgTf"  GridPane.columnIndex="1" GridPane.rowIndex="3"/>
		
		<Label text="Datum rođenja" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
		<DatePicker fx:id="datumRodjenjaDp"  GridPane.columnIndex="1" GridPane.rowIndex="4"/>
		
		<Label text="Mesto rođenja" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
		<TextField fx:id="mestoRodjenjaTf"  GridPane.columnIndex="1" GridPane.rowIndex="5"/>
		
		<Label text="Država rođenja" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
		<ComboBox fx:id="drzavaRodjenjaCb"  GridPane.columnIndex="1" GridPane.rowIndex="6"/>
		
		</GridPane>
		
		
         </Tab>

         <Tab fx:id="tab2" text="Kontakt podaci">
         <VBox alignment="center">
         <GridPane alignment="center" hgap="10" vgap="10">
         	<Label text="Emejl" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
		   	<TextField fx:id="emailTf"  GridPane.columnIndex="1" GridPane.rowIndex="0"/>
		   	<Label text="Broj telefona" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
		   	<TextField fx:id="brojTelefonaTf"  GridPane.columnIndex="1" GridPane.rowIndex="1"/>
		   	<Label text="Adresa prebivališta" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
		   	<TextField fx:id="adresaPrebivalistaTf"  GridPane.columnIndex="1" GridPane.rowIndex="2"/>
		   	<Label text="Mesto prebivališta" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
		   	<TextField fx:id="mestoPrebivalistaTf"  GridPane.columnIndex="1" GridPane.rowIndex="3"/>		   	
		  </GridPane>
		  <Separator>
		  	<padding><Insets top="10" right="0" bottom="10" left="0"/></padding>
		  </Separator>
		  <GridPane  alignment="center" hgap="10" vgap="10"> 	
		   	<Label text="Adresa stanovanja" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
		   	<TextField fx:id="adresaStanovanjaTf"  GridPane.columnIndex="1" GridPane.rowIndex="4"/>
		   	<Label text="Mesto stanovanja" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
		   	<TextField fx:id="mestoStanovanjaTf"  GridPane.columnIndex="1" GridPane.rowIndex="5"/>
		 </GridPane>
		 </VBox>  	
		   	
         </Tab>

 </TabPane>